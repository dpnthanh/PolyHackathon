<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.thanh.android.polyhackathon.SchoolActivity">
    <TextView
        android:id="@+id/textViewSchoolLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map_school"
            android:layout_gravity="center_horizontal"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_map_large"
            tools:context="com.thanh.android.polyhackathon.MapsActivity" />
        <SearchView
            android:id="@+id/searchView_adr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </SearchView>
    </FrameLayout>
    <Button
        android:id="@+id/button_setLoactionHere_school"
        android:text="@string/setPlaceHere"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>
