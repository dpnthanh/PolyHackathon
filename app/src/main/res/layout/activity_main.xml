<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thanh.android.polyhackathon.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/seekBar_metter"
            android:layout_width="@dimen/width_main"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margitTop_map"
            android:max="1000"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView_studentStatus"
            android:layout_width="@dimen/width_main"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16dp" />

        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:map="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="@dimen/width_main"
            android:layout_height="@dimen/height_map"
            android:layout_marginTop="@dimen/margitTop_map"
            tools:context="com.thanh.android.polyhackathon.MapsActivity" />

        <EditText
            android:id="@+id/edtLocation"
            android:layout_width="@dimen/width_main"
            android:layout_height="wrap_content"
            android:visibility="gone" />



        <Button
            android:id="@+id/button_checkin"
            android:layout_width="@dimen/width_main"
            android:layout_height="wrap_content"
            android:text="@string/button_checking" />

        <TextView
            android:id="@+id/textView_Location"
            android:layout_width="@dimen/width_main"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textView_LocationSchool"
            android:layout_width="@dimen/width_main"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="20dp" />

        <ProgressBar
            android:id="@+id/process_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_test_logout"
            android:layout_width="@dimen/width_main"
            android:layout_height="wrap_content"
            android:text="@string/signout" />
        <ImageView
            android:id="@+id/imageViewPhoto"
            android:layout_width="@dimen/width_main"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_marginTop="@dimen/margitTop_map"
            android:adjustViewBounds="true"
            android:layout_above="@+id/button1" />

    </LinearLayout>

</ScrollView>
